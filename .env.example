# Transcript Builder Configuration
# Copy this file to .env and update values

# Application
APP_NAME="Transcript Builder"
DEBUG=false
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database (PostgreSQL for SaaS, SQLite for local)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/transcript_builder
DATABASE_POOL_SIZE=20

# Redis (optional - for caching and job queues)
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Add your frontend URLs
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
MAX_UPLOAD_SIZE_MB=10

# PDF Generation
PDF_TIMEOUT_SECONDS=60
PDF_MAX_CONCURRENT=5

# Blackbaud Integration (optional)
# BLACKBAUD_CLIENT_ID=
# BLACKBAUD_CLIENT_SECRET=
# BLACKBAUD_REDIRECT_URI=

# Email (optional - for transcript delivery)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=transcripts@school.edu

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_BLACKBAUD_SYNC=false
ENABLE_EMAIL_DELIVERY=false
ENABLE_TEMPLATE_MARKETPLACE=false

# Local CLI Settings (for non-SaaS mode)
DATA_DIR=./data
SCHOOL_NAME="Keswick Christian School"
SCHOOL_ADDRESS="8585 66th Street North"
SCHOOL_CITY="Pinellas Park, FL 33782"
SCHOOL_PHONE="(727) 522-5115"
